<% @todos.each do |todo| %>
  <ul>
    <% if todo.not_done?  %>
      <%= link_to check_todo_path(todo), method: :patch do %>
        <i class="far fa-square"></i>
      <% end %>
    <% else %>
      <%= link_to check_todo_path(todo), method: :patch do %>
        <i class="fas fa-check"></i>
      <% end %>
    <% end %>
    <%= link_to todo_path(todo) do %>
      <%= todo.title %>
    <% end %>
    <%#= link_to "do/undo", check_todo_path(todo), method: :patch	%>
    <%= link_to prioritize_todo_path(todo), method: :patch do %>
      <i class="fas fa-arrow-up"></i>
    <% end %>
    <%= link_to unprioritize_todo_path(todo), method: :patch do %>
      <i class="fas fa-arrow-down"></i>
    <% end %>
  </ul>
<% end %>
<%= link_to "Add ToDo", new_todo_path %>